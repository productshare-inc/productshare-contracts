{
  "name": "sharecash",
  "version": "1.0.0",
  "description": "repo for the sharecash contract and its management",
  "main": "index.js",
  "scripts": {
    "test": "npx hardhat test",
    "compile": "npx hardhat compile",
    "deployShareCash": "npx hardhat run ./scripts/deployment/deployShareCash.js --network optimisticSepolia",
    "deployGovernor": "npx hardhat run ./scripts/deployment/deployGovernor.js --network optimisticSepolia",
    "deployStakeShare": "npx hardhat run ./scripts/deployment/deployStakeShare.js --network optimisticSepolia",
    "deployTokenSale": "npx hardhat run ./scripts/deployment/deployProductShareTokenSale.js --network optimisticSepolia",
    "size": "npx hardhat size-contracts",
    "lint": "solhint 'contracts/**/*.sol'",
    "format": "prettier --write 'contracts/**/*.sol'"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@nomicfoundation/hardhat-chai-matchers": "^2.0.2",
    "@nomicfoundation/hardhat-verify": "^1.1.1",
    "@nomiclabs/hardhat-etherscan": "^3.1.8",
    "chai": "^4.3.10",
    "dotenv": "^10.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.4.1",
    "eslint-plugin-promise": "^5.2.0",
    "ethereum-waffle": "^3.4.4",
    "hardhat": "^2.18.3",
    "hardhat-gas-reporter": "^1.0.8",
    "prettier": "^2.6.2",
    "prettier-plugin-solidity": "^1.0.0-beta.13",
    "solhint": "^3.6.2",
    "solidity-coverage": "^0.7.21"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^5.0.1",
    "@openzeppelin/contracts-upgradeable": "^5.0.0",
    "@openzeppelin/hardhat-upgrades": "^2.3.3",
    "ethers": "^6.8.1",
    "hardhat-contract-sizer": "^2.10.0",
    "hardhat-verify": "^1.0.0",
    "test": "^3.3.0"
  }
}
